<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_nombre_aplicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tituloApp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_introducir_asignaturas"
        ></TextView>

    <Button
        android:id="@+id/btn_introducir_asignaturas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/botonIntroducirAsignatura"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_nombre_aplicacion"
        app:layout_constraintBottom_toTopOf="@+id/btn_visualizar_asignaturas"
        ></Button>

    <Button
        android:id="@+id/btn_visualizar_asignaturas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/botonVisualizarAsignaturas"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_visualizar_asignaturas"
        app:layout_constraintBottom_toBottomOf="parent"
        ></Button>

</androidx.constraintlayout.widget.ConstraintLayout>